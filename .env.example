# =============================================================================
# 生产环境配置模板
# 复制此文件为 .env 并填入实际的生产环境配置
# =============================================================================

# Django核心配置
SECRET_KEY=your-super-secret-key-here-change-me
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# 数据库配置
DB_ENGINE=django.db.backends.mysql
DB_NAME=cart_it_prod
DB_USER=your_db_user
DB_PASSWORD=your_strong_db_password
DB_HOST=your_db_host
DB_PORT=3306

# 国际化和时区
LANGUAGE_CODE=zh-hans
TIME_ZONE=Asia/Shanghai
USE_I18N=True
USE_TZ=True

# 静态文件配置
STATIC_URL=/static/
STATIC_ROOT=/var/www/cartit/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/cartit/media/

# 邮件配置
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@domain.com
EMAIL_HOST_PASSWORD=your_email_password

# 缓存配置
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# 第三方服务配置
ALIYUN_OSS_ACCESS_KEY_ID=your_oss_key
ALIYUN_OSS_ACCESS_KEY_SECRET=your_oss_secret
ALIYUN_OSS_BUCKET_NAME=your_bucket
ALIYUN_OSS_ENDPOINT=your_endpoint

ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key

# 安全配置
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=1209600

# 日志配置
LOG_LEVEL=WARNING
LOG_DIR=logs
